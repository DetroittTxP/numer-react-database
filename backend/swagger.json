{
  "swagger": "1.0.0",
  "info": {
    "title": "Caltrap API",
    "description": "API to calculate definite integrals using the composite trapezoidal rule",
    "version": "1.0.0"
  },
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "randomtrap",
      "description": "Endpoints to generate random equations"
    }
  ],
  "paths": {
    "/caltrap": {
      "post": {
        "summary": "Calculate the definite integral using the composite trapezoidal rule",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "equation",
            "description": "The equation to integrate",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "equation": {
                  "type": "string"
                },
                "xlower": {
                  "type": "number"
                },
                "xupper": {
                  "type": "number"
                },
                "n": {
                  "type": "number"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The result of the integral calculation",
            "schema": {
              "type": "object",
              "properties": {
                "result": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    },
    "/randomtrap": {
      "post": {
        "summary": "Generate a random equation",
        "responses": {
          "200": {
            "description": "Returns a random equation",
            "schema": {
              "type": "object",
              "properties": {
                "equation": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/test": {
      "get": {
        "description": "Get all names",
        "responses": {
          "200": {
            "description": "SUCCESS"
          }
        }
      }
    }
  }
}
